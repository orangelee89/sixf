<?xml version="1.0"?>
<robot name="simple_mobile_robot">

  <!-- Base Link (Chassis) -->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.4 0.2 0.1"/>  <!-- Length, Width, Height -->
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>  <!-- Blue -->
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.2 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>  <!-- 2 kg -->
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02"/>
    </inertial>
  </link>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>  <!-- Radius, Length -->
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>  <!-- Black -->
      </material>
      <origin rpy="1.5708 0 0"/>  <!-- Rotate 90Â° around X (to stand upright) -->
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <origin rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>  <!-- 0.5 kg -->
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.002"/>
    </inertial>
  </link>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <material name="black"/>
      <origin rpy="1.5708 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <origin rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.002"/>
    </inertial>
  </link>

  <!-- Left Wheel Joint (Revolute) -->
  <joint name="left_wheel_joint" type="revolute">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="-0.15 0.13 -0.05"/>  <!-- Position relative to chassis -->
    <axis xyz="0 1 0"/>  <!-- Rotate around Y-axis -->
    <limit effort="100" velocity="10" lower="-1e30" upper="1e30"/>  <!-- No limits -->
  </joint>

  <!-- Right Wheel Joint (Revolute) -->
  <joint name="right_wheel_joint" type="revolute">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="-0.15 -0.13 -0.05"/>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="10" lower="-1e30" upper="1e30"/>
  </joint>

</robot>